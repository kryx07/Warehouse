<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/category_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textAllCaps="true"
        android:textSize="@dimen/text_title_size"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_marginTop="@dimen/double_category_line_margin"
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_view_title">

        <TextView
            android:id="@+id/category_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_category_line_margin"
            android:text="@string/category_name_text"
            android:textSize="@dimen/text_field_size" />

        <EditText
            android:id="@+id/category_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/category_name_label"
            android:inputType="text" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/first_row">

        <TextView
            android:id="@+id/category_parent_label"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_field_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_category_line_margin"
            android:text="@string/category_parent_text" />

        <Spinner
            android:id="@+id/category_parent_spinner"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_category_line_margin"
            android:layout_toEndOf="@id/category_parent_label"

            />
    </RelativeLayout>

    <Button
        android:id="@+id/button_save_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_save_category_label"
        />


</RelativeLayout>